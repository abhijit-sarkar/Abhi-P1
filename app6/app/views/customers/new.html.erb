<h2>Create New customer</h2>
<% if @customer.errors.any? %>
<ul>
	<% @customer.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>
<%= form_for @customer do |f| %>
	<table class = "table">
		<tbody>
			<tr>
				<th>Client ID :</td>
				<td><%= f.text_field :client_id %></td>
			</tr>
		  
			<tr>
				<th>Customer Name :</th>
				<td><%= f.text_field :cname %></td>
			</tr>
			<tr>
				<th>Contact No :</th>
				<td><%= f.text_field :contact %></td>
			</tr>
			<tr>
				<th>Email :</th>
				<td><%= f.text_field :email %></td>
			</tr>
		</tbody>
	</table>
	<%= f.submit class:"btn btn-primary btn-md" %>
	<%= link_to "Back",customers_path,class:"btn btn-primary btn-md" %>
	<br><br><br>
<% end %>