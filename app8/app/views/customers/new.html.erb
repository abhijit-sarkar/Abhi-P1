<h2>Create New Customer</h2>
<%= form_for @customer do |f| %>
	<% if @customer.errors.any? %>
		<h4>Errors: </h4>
		<ul>
			<% @customer.errors.full_messages.each do|msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<table class = "table">
		<tbody>
			<tr>
				<th><h5>Customer Name :</h5></td>
				<td><%= f.text_field :cust_name %></td>
			</tr>
		  
			<tr>
				<th><h5>Contact :</h5></th>
				<td><%= f.text_field :contact %></td>
			</tr>
			<tr>
				<th><h5>Email :</h5></th>
				<td><%= f.text_field :email %></td>
			</tr>
		
			<tr>
				<td><%= f.submit class:"btn btn-primary btn-md" %></td>
				<td><%= link_to "Back",customers_path, class:"btn btn-primary btn-md" %></td>
			</tr>
	   </tbody>

	</table>
<% end %>
