<html>
  <head>
    <style>
      .tab1
      {
      margin-top:10px;
      margin-left:10px;
      }
      .tab1 th
      {
      text-align:center;
      }
      .tab2
      {
      background-color:#f5f5f5;
      }
      .tab1 thead
      {
      background-color:#afb42b;
      }
      .d2
      {
      margin-top:20px;

      }
      .d1
      {
      margin-top:30px;
      }
    </style>
  </head>
  <body>
    <table class = "table">
      <thead>
	<tr>
	  <th colspan="2"><h5><b>Profiles Details:-</b></h5></th>
	</tr>
      </thead>
      <tbody class="tab2">
	<tr>
	  <th><h5><b>Customer Name :</b></h5></th>
	  <td><h5><%= @cust.cust_name %></h5></td>
	</tr>
	<tr>
	  <th><h5><b>Contact :</b></h5></th>
	  <td><h5><%=  @cust.contact %></h5></td>
	</tr>
	<tr>
	  <th><h5><b>Email :</b></h5></th>
	  <td><h5><%= @cust.email %></h5></td>
	</tr>

      </tbody>
    </table>

    <div class="d2">
      <h5><b>Policies purchased :-</b></h5>
    </div>
    <table class="table-bordered tab1">
      <thead>
	<th><h5><b>Policy Name</b></h5></th>
	<th><h5><b>Insurance Company</b></h5></th>
	<th><h5><b>Nominee</b></h5></th>
	<th><h5><b>Sum Insured(in Rs.)</b></h5></th>
	<th><h5><b>Premium(in Rs.)</b></h5></th>
	<th><h5><b>Maturity Date</b></h5></th>
	<th><h5><b>Days left</b></h5></th>
	<th><h5><b>Mature Status</b></h5></th>
	<th><h5><b>Matured Amount</b></h5></th>
	<th><h5><b>Status</b></h5></th>
	<th colspan="3"><h5><b>Options</b></h5></th>
      </thead>
      <tbody>
	<% @pols.each do |p| %>
	<tr>
	  <td><%= Plan.find(p.plan_id).plan_name %></td>
	  <td><%= Com.find(Plan.find(p.plan_id).com_id).com_name %>
	  <td><%= p.nominee %></td>
	  <td><%= p.sum_insured %></td>
	  <td><%= p.premium %></td>
	  <td><%= p.maturity_date %></td>
	  <td><%= p.maturity_date.day-Time.now.to_date.day %></td>
	  <% if (p.maturity_date.day-Time.now.to_date.day)==0 %>
	  <td><%= "Matured" %>
	    <% else %>
	  <td><%= "Not Matured" %></td>
	  <% end %>
	  <td><%= p.maturity_amount %></td>
	  <td><%= p.status %></td>
	  <td><%= link_to "Delete",pol_path(p),method: :delete,data: {confirm: "Are you sure?" },class:"btn btn-danger btn-xs" %></td>
	  <% if p.status!="surrendered" %>
	  <td><%= link_to "Surrender",main_path(p),method: :delete,data: {confirm: "Are you sure?" },class:"btn btn-info btn-xs" %></td>
	  <% end %>
	  <td><%= link_to "Comment",edit_comment_path(p.plan_id),class: "btn btn-warning btn-xs" %></td>
	  
	</tr>
	<% end %>
      </tbody>
    </table>
    <div class="d1">
      <%= link_to "Back",customers_path, class:"btn btn-primary btn-md" %>

    </div>
    <br><br><br>
  </body>
</html>
