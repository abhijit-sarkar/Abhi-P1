<html>
  <body>
    <%= form_for @customer do |f| %>
    <table class="table">
      <tbody>
	<tr>
	  <th>Customer Name</th>
	  <td><%= f.text_field :cust_name %></td>
	</tr>
	<tr>
	  <th>Contact</th>
	  <td><%= f.text_field :contact %></td>
	</tr>
	<tr>
	  <th>Email</th>
	  <td><%= f.text_field :email %></td>
	</tr>
	<tr>
	  <td><%= f.submit "Proceed", class:"btn btn-primary btn-md" %></td>
	</tr>
      </tbody>
    </table>
    <% end %>
  </body>
</html>
