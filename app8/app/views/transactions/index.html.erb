
<h3>Policy bought successfully (E-Receipt): </h3><div align = "right">100% <progress value = "100" max = "100"></progress> Complete</div>

<div class = "jumbotron" bgcolor = "white" >
  
  <div class = "table-responsive" >
    
    <table class = "table table-striped" >
      
      <tbody>
	
	<tr>
	  <th>Customer Name :</th>
	  <td><%= Customer.find(@pol.customer_id).customer_name %></td>
	</tr>

	<tr>
	  <th>Plan Name :</th>
	  <td><%= Plan.find(@pol.plan_id).plan_name %> </td>
	</tr>
	
	<tr>
	  <th>Company Name :</th>
	  <td><%= Company.find(Plan.find(@pol.plan_id).company_id).company_name %></td>
	</tr>
	
	<tr>
	  <th>Duration :</th>
	  <td><%= @pol.duration %> years</td>
	</tr>
	
	<tr>
	  <th>Sum Insured :</th>
	  <td>Rs.<%= session[:premium] %></td>
	</tr>
	
	<tr>
	  <th>Premium Paid :</th>
	  <td>Rs.<%= @pol.premium %></td>
	</tr>
	
	<tr>
	  <th>Maturity Value :</th>
	  <td>Rs.<%= @pol.maturity_amount %></td>
	</tr>
	
	<tr>
	  <th>Premium Type :</th>
	  <td><%= @pol.premium_mode %></td>
	</tr>
	
	<tr>
	  <th>Next Premium Date :</th>
	  <td>
	    <% if @pol.premium_mode == "Quarterly" %>
	      <%= Time.now.to_date + 4.month %>
	    <% end %>
	    <% if @pol.premium_mode == "Monthly" %>
	      <%= Time.now.to_date + 1.month %>
	    <% end %>
	    <% if @pol.premium_mode == "Yearly" %>
	      <%= Time.now.to_date + 12.month %>
	    <% end %>
	  </td>
	</tr>
	
      </tbody>

    </table>
    
  </div>
  
</div>

<br>
<%= link_to "Check Plans" , plans_path , class: "btn btn-primary btn-md" %>
<%= link_to "Home" , home_index_path , class: "btn btn-primary btn-md" %>
<%= link_to "Send E-Mail" , send_mail_transaction_path(@pol.id) , class: "btn btn-primary btn-md" %>
