<html>
  <head>

    <script type="text/javascript">
      $(document).ready(function(){
      $('#t1').hide();
      });
    </script>
  </head>
  <body>
    
    <%= form_tag(:action => "check_data") do %>
    <table class="table">
      <tbody>
	<tr id="t1">
	  <td>Plan ID:</td>
	  <td><%= text_field_tag :plan_id,@plan.id,:readonly => true %></td>
	</tr>
	<tr id="nm1">
	  <td>Name: </td>
	  <td><%= text_field_tag :cust_name,nil,required: true %></td>
	  
	</tr>
	<tr>
	  <td>Contact: </td>
	  <td><%= number_field_tag :contact,nil,required: true %><i>**No.should be of 10 digits**</i></td>
	  
	</tr>
	<tr>
	  <td>Email: </td>
	  <td><%= email_field_tag :email,nil,required: true %><i>E.g. anything@domain.com</i></td>
	  
	</tr>
	<tr>
	  <td>Plan Duration(in days): </td>
	  <td><%= number_field_tag :duration,nil,min: 1,max: @plan.max_tenure,step: 1, required: true %></td>
	  
	</tr>
	<tr>
	  <td>Sum Insured(in Rs.): </td>
	  <td><%= number_field_tag :premium,nil,min: 2000,required: true %></td>
	  
	</tr>
      </tbody>
    </table>  
    <%= submit_tag "Proceed", class: "btn btn-primary btn-md" %>
    <%= link_to "Back",selection_path(session[:last_id]),class: "btn btn-primary btn-md" %>
    <% end %>
    
  </body>
</html>
